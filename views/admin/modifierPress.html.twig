	{% extends "admin/adminLayout.html.twig" %}

		{% block title %}Modifier d'un article de Presse :{% endblock %}

		{% block content %}
			{% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
<section id="contact">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Modifer un article de Presse</h2>
              <h3 class="section-subheading text-muted">Que des bonnes critiques !</h3>
          </div>
        </div>
       

            {{ form_start(pressForm)}}
            	
              


                {# Titre #}
            	<div class="form-group">
            	{# affichage des éventuelles erreurs pour le champ titre #}
            	{{ form_errors(pressForm.title) }}
            	{# customisation du champ titre #}
            	{{ form_widget(pressForm.title,
            		{
            			'attr': {
            				'class': 'form-control',
            				'placeholder': 'Entrez le nom de votre Spectacle'
            			}
            		}
            	)}}
            	<p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group">


                {# Contenu #}
            	<div class="form-group">
            		{# affichage des éventuelles erreurs pour le champ contenu #}
            		{{ form_errors(pressForm.content) }}
            		{# customisation du champ contenu #}
                    {{ form_widget(pressForm.content, 
                    	{ 
                    		'attr':  {
                        		'rows': '4',
                        		'class': 'form-control',
                        		'placeholder': 'Entrez du contenu'
                            }
                        }
                    )}}
            	</div>
                
            	 {# Image #}
            	<div class="form-group">
            		{# affichage des éventuelles erreurs pour le champ contenu #}
            		{{ form_errors(pressForm.image) }}
            		{# customisation du champ contenu #}
                    {{ form_widget(pressForm.image, 
                    	{ 
                    		'attr':  {
                        		'class': 'form-control',
                        		'placeholder': "Image de l'évènement"
                            }
                        }
                    )}}
            	</div>

            	{{ form_widget(pressForm.Enregistrer,
            		{ 
                    		'attr':  {
                        		'class': 'btn btn-default'
                    }}
            	)}}

            	<img src="{{asset('uploads/img/'~press.image)}}">


			{{ form_end(pressForm)}}
    </div>
    </div>
    
</section>
		{% endblock %}

