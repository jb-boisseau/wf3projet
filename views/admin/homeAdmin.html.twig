{% extends "admin/adminLayout.html.twig" %} {% block title %}Admin{% endblock %} {% block content %}




<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Administration</h2>
                <h3 class="section-subheading text-muted">Gestion des spectacles.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="col-lg-12 text-center">
                            <a href="{{ path('ajoutSpectacle') }}">
                                <button class="btn btn-primary btn-xl text-uppercase">Ajout d'un Spectacle</button>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <ul>
                            {% for spectacle in spectacles %}
                            

                            <li>

                                <div class="row">
                                    <div class="col-md-3">
                                        
                                        <p class="section-subheading text-muted"> 
                                           <br>Titre : {{ spectacle.title}}
                                           <br>Date : {{ spectacle.dateVenue}}
                                            <br> Place restantes : {{ spectacle.nbTickets}}
                                            <br> Lieu : {{ spectacle.place}}
                                            <br> Type : {{ spectacle.type}}
                                            <br> Prix: {{ spectacle.price}}â‚¬
                                            <br>
                                        </p>
                                        <a href="{{ path('deleteSpectacle', {id: spectacle.id})}}">Supprimer</a> ||| <a href="{{ path('updateSpectacle', {id: spectacle.id})}}">Modifier</a>
                                    </div>
                                    <div class="col-md-3">
                                        <img src="uploads/img/{{spectacle.image}}" style="width:200px">
                                    </div>



                                    

                                </div>
                            </li>
                            <br> {% endfor %}
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

{# Message de confirmation #} {% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %} {% endblock %}
