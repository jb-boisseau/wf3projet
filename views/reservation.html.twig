{% extends "layout.html.twig" %}

{% block content %}
    <section id="contact">
      <div class="container">
          
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Veuillez reserver votre place ici!</h2>
                    <h3 class="section-subheading text-muted">nous vous remercions !</h3>
             </div>
        </div>
          
        <div class="row">
            <div class="col-lg-12">
                
                {% for flashMessage in app.session.flashbag.get('success') %}
                
                    <div class="alert alert-success">
                    {{ flashMessage }}
                    </div>
                
                {% endfor %}
            
            <div class="col-md-12 ">
                  
                {{ form_start(reservationForm, { 'attr': {'class': 'form-horizontal'} }) }}
                
                        <div class="form-group">
                    
                            {{ form_label(reservationForm.email, null) }}
                    
                            <div>
                                {{ form_errors(reservationForm.email) }}
                                {{ form_widget(reservationForm.email, { 'attr':  {'class': 'form-control'}}) }} 
                            </div>
                    
                        </div>
                
                        <div class="form-group">
                            {{ form_label(reservationForm.name, null) }}
                            <div>
                                {{ form_widget(reservationForm.name, { 'attr':  { 'class': 'form-control'}}) }}
                            </div>
                        </div>
                
                        <div class="form-group">
                            {{ form_label(reservationForm.spectacles, null) }}
                            <div>
                                {{ form_errors(reservationForm.spectacles) }}
                                {{ form_widget(reservationForm.spectacles, { 'attr':{
                                'class': 'form-control'}}) }}
                            </div>
                        </div>
                
                        <div class="form-group">
                            {{ form_label(reservationForm.ticket, null) }}
                            <div>
                                {{ form_errors(reservationForm.ticket) }}
                                {{ form_widget(reservationForm.ticket, { 'attr':{
                                'class': 'form-control'}}) }}
                            </div>
                        </div>
                
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-lg" value="Valider la rÃ©servation" />
                        </div>
                
                    {{ form_end(reservationForm) }}
                
                </div>
            </div> 
          </div>
        </div>
    </section>
                                
{% endblock %}